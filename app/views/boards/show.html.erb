<p id="notice"><%= notice %></p>

<div id="board">
<div class="board-header">
  <h1 class="board-name">
    <%= link_to @board.name, edit_board_path(@board) %>

  </h1>

  <ul class="nav nav-pills">
    <% if @board.user_can_manage @current_user %>
      <li role="presentation">
        <%= link_to manage_board_path(@board),  class: 'board-manage btn btn-default' do %>
            <span class="glyphicon glyphicon-cog"></span> Settings
        <% end %>
      </li>
    <% end %>

    <li role="presentation">
      <%= link_to new_group_path(board_id: @board.id), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-plus"></span> New Group
      <% end %>
    </li>
  </ul>
</div>
  <%= render partial: 'groups/group', collection: @board.groups  %>

  <%= render 'cards/dialog' %>
</div>
