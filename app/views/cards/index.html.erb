<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Group</th>
      <th>Due date</th>
      <th>Start date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= link_to card.title, card %></td>
        <td><%= card.group %></td>
        <td><%= card.due_date %></td>
        <td><%= card.start_date %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

