<%= form_for(@card) do |f| %>

    <%= f.hidden_field :parent_id, value:params[:parent_id] %>

    <% if @card.id %>
        <%= f.hidden_field :group_id %>
    <% else %>
        <%= f.hidden_field :group_id, value: params[:group_id] %>
    <% end %>

    <div class="form-group">
      <%= f.label :text, class: 'sr-only' %><br>
      <%= f.text_area :text, class: 'form-control card-text', rows: '20' %>
    </div>

    <div class="form-group">
      <div class='input-group date' id='datetimepicker-start-date'>
        <%= f.text_field :start_date, class: 'form-control' %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>

    <div class="form-group">
      <div class='input-group date' id='datetimepicker-due-date'>
        <%= f.text_field :due_date, class: 'form-control' %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>

    <div class="form-group">
      <%= f.button  'OK', type: 'submit', class: 'btn btn-default' %>
    </div>
<% end %>
