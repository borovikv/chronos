<div id="add-card-user-form">
  <%= form_tag({controller: 'card_user', action: :create}, class: 'form-inline', remote: true) do %>
      <% if flash[:alert] %>
          <div id="error_explanation">
            <%= flash[:alert] %>
          </div>
      <% end %>

      <div class="form-group">
        <%= label_tag :user_id, 'user', class: 'sr-only' %>
        <%= select_tag :user_id, options_from_collection_for_select(@card.group.board.users, 'id', 'email'), {class: 'form-control'}   %>
      </div>


      <%= button_tag 'Add user', type: :submit, class: 'btn btn-default' %>
  <% end %>
</div>