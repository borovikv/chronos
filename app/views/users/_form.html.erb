<%= form_for(@user, html: {class: 'form-horizontal'} ) do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation" >
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="form-group<% if @user.errors[:email].present? %> has-error<%end%>">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>

    <div class="form-group<% if @user.errors[:password].present? %> has-error<%end%>">
      <%= f.label :password, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.password_field :password, type: 'password', class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>

    <div class="form-group<% if @user.errors[:password_confirmation].present? %> has-error<%end%>">
      <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.password_field :password_confirmation, type: 'password', class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.button type: 'submit', class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
